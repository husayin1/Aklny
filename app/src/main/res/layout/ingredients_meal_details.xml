<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/IngredientConstraint"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ingredientCardView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewIngredientImageItem_mealDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="ContentDescription"
            android:padding="8dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/textViewIngredientNameItem_mealDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/ingredientCardView"
        app:layout_constraintStart_toStartOf="@+id/ingredientCardView"
        app:layout_constraintTop_toBottomOf="@+id/ingredientCardView"
        tools:text="Mulukhiyah" />

    <TextView
        android:id="@+id/textViewIngredientMeasureItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/ingredientCardView"
        app:layout_constraintStart_toStartOf="@+id/ingredientCardView"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngredientNameItem_mealDetails"
        tools:text="1 sliced" />
</androidx.constraintlayout.widget.ConstraintLayout>
